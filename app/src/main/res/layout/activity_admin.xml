<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:id="@+id/adminHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2C3E50"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtAdminTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản trị viên (Admin)"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAdminLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E74C3C"
            android:text="Thoát"
            android:textSize="12sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quản lý khách sạn -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý khách sạn"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnManageRooms"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="DANH SÁCH PHÒNG"
                    android:backgroundTint="#3498DB"
                    app:cornerRadius="8dp"/>
                <Button
                    android:id="@+id/btnManageBookings"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="DANH SÁCH PHÒNG ĐẶT"
                    android:backgroundTint="#3498DB"
                    app:cornerRadius="8dp"/>
            </LinearLayout>

            <!-- Quản lý nhân sự -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý nhân sự"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnAddStaff"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="TẠO TÀI KHOẢN NHÂN VIÊN"
                android:backgroundTint="#8E44AD"
                app:cornerRadius="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <Button
                    android:id="@+id/btnViewStaffs"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="DANH SÁCH NHÂN VIÊN"
                    android:backgroundTint="#34495E"
                    android:textSize="11sp"
                    app:cornerRadius="8dp"/>
                <Button
                    android:id="@+id/btnViewCustomers"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="DANH SÁCH KHÁCH HÀNG"
                    android:backgroundTint="#34495E"
                    android:textSize="11sp"
                    app:cornerRadius="8dp"/>
            </LinearLayout>

            <!-- Doanh thu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Thống kê tài chính"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng doanh thu toàn hệ thống"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/txtTotalRevenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 VNĐ"
                        android:textColor="#27AE60"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>